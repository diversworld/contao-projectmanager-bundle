{
    "name": "diversworld/contao-projectmanager-bundle",
    "description": "Bundle um Projektaufgaben zu verwalten.",
    "keywords": [
        "contao",
        "bundle",
        "tag 3",
        "tag 4"
    ],
    "type": "contao-bundle",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Diversworld Eckhard Becker",
            "email": "info@diversworld.eu",
            "homepage": "https://github.com/diversworld",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/diversworld/contao-projectmanager-bundle/issues",
        "source": "https://github.com/diversworld/contao-projectmanager-bundle"
    },
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "^4.13 || ^5.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.12"
    },
    "autoload": {
        "psr-4": {
            "Diversworld\\ContaoProjectmanagerBundle\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": false,
            "contao/manager-plugin": false,
            "contao-community-alliance/composer-plugin": true
        }
    },
    "extra": {
        "contao-manager-plugin": "Diversworld\\ContaoProjectmanagerBundle\\ContaoManager\\Plugin"
    },
    "scripts": {
        "cs-fixer": "@php tools/ecs/vendor/bin/ecs check config/ contao/ src/ templates/ tests/ --config tools/ecs/config.php --fix --ansi",
        "unit-tests": "@php tools/phpunit/vendor/bin/phpunit -c tools/phpunit/phpunit.xml.dist"
    },
    "version": "1.0"
}